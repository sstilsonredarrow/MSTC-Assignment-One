<?xml version="1.0" encoding="utf-8"?>
<views:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:Assignment1" 
             xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
             x:Class="Assignment1.MainPage">
    <StackLayout BackgroundColor="Gray">
        <Grid x:Name="LoginGrid" RowSpacing="10" Padding="10, 50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Text="{Binding WelcomeText}" HorizontalOptions="CenterAndExpand" 
                       TextColor="White" FontSize="Large" HorizontalTextAlignment="Center" />
                <Button Grid.Row="1" Grid.Column="0" HorizontalOptions="CenterAndExpand" Text="{Binding ButtonText}" VerticalOptions="End" 
                       BackgroundColor="White" BorderRadius="5" TextColor="Blue" Padding="5"
                       Command="{Binding DisplayListCommand}" />
            </Grid>
    </StackLayout>
</views:MvxContentPage>