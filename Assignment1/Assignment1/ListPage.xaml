<?xml version="1.0" encoding="UTF-8"?>
<views:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
             x:Class="Assignment1.ListPage">
    <ContentPage.Content >
        <ListView ItemsSource="{Binding ListItems}" RowHeight="55" BackgroundColor="Gray" SeparatorColor="Navy">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="5">
                            <Label Text="{Binding ItemName}" TextColor="White" 
                                   HorizontalOptions="StartAndExpand" FontSize="18" VerticalOptions="End" HeightRequest="20"/>
                            <Label Text="{Binding ItemDescription}" TextColor="Silver" 
                                   HorizontalOptions="StartAndExpand" FontSize="16" VerticalOptions="Start" HeightRequest="16"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</views:MvxContentPage>
